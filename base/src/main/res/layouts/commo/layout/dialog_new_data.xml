<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@color/gray_zhouyu">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@color/gray_zhouyu">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/up_down_line_white_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_cancel"
                    style="@style/button_passive"
                    android:layout_width="@dimen/all_button_width"
                    android:layout_height="@dimen/all_button_height"
                    android:layout_marginBottom="@dimen/all_padding"
                    android:onClick="@{onClickListener}"
                    android:text="@string/all_cancel"
                    android:textSize="@dimen/all_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btn_ok"
                    />

                <TextView
                    android:id="@+id/btn_ok"
                    style="@style/button_positive"
                    android:layout_width="@dimen/all_button_width"
                    android:layout_height="@dimen/all_button_height"
                    android:layout_marginBottom="@dimen/all_padding"
                    android:layout_marginTop="@dimen/all_padding"
                    android:onClick="@{onClickListener}"
                    android:text="新增"
                    android:textSize="@dimen/all_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/btn_cancel"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>


            <TextView
                android:id="@+id/tv_title"
                style="@style/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/all_padding"
                android:text="发布 "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cl"
                android:layout_below="@+id/tv_title"
                android:orientation="vertical">

                <EditText

                    android:id="@+id/et_movie_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/all_padding"
                    android:hint="请输入名称"/>

                <TextView
                    android:id="@+id/tv_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/all_padding"
                    android:hint="封面图片"/>

                <TextView
                    android:id="@+id/btn_select"
                    style="@style/button_positive"
                    android:layout_width="@dimen/all_button_width"
                    android:layout_height="@dimen/all_button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/all_padding"
                    android:layout_marginTop="@dimen/all_padding"
                    android:onClick="@{onClickListener}"
                    android:text="选择封面"
                    android:textSize="@dimen/all_text_size"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>